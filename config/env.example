# Vapi Configuration
VAPI_API_KEY=your_vapi_api_key_here
VAPI_PHONE_NUMBER=+91XXXXXXXXXX
VAPI_ASSISTANT_ID=your_assistant_id
VAPI_PUBLIC_KEY=your_public_key
VAPI_PRIVATE_KEY=your_private_key
VAPI_WEBHOOK_URL=https://your-domain.com/webhooks/vapi

# Yellow.ai Configuration
YELLOW_API_KEY=your_yellow_api_key
YELLOW_BOT_ID=your_bot_id
YELLOW_API_URL=https://cloud.yellow.ai/api
YELLOW_WEBHOOK_SECRET=your_webhook_secret

# Travel Backend APIs
FLIGHT_API_KEY=your_flight_api_key
FLIGHT_API_URL=https://api.aviationstack.com/v1
HOTEL_API_KEY=your_hotel_api_key
HOTEL_API_URL=https://api.hotelsearch.com/v1
BOOKING_API_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite:///./mytrip_voicebot.db
REDIS_URL=redis://localhost:6379

# Server Configuration
HOST=0.0.0.0
PORT=8080
ENVIRONMENT=development
DEBUG=true

# Multilingual Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,kn

# Voice Settings
DEFAULT_VOICE=en-IN-Wavenet-A
VOICE_SPEED=1.0
VOICE_PITCH=0

# Session Management
SESSION_TIMEOUT=1800
MAX_CONVERSATION_TURNS=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/voicebot.log

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_ENDPOINT=https://analytics.mytrip.ai

# Security
JWT_SECRET=your_jwt_secret_key
WEBHOOK_SECRET=your_webhook_secret
ENCRYPT_CALLS=true

# Fallback & Escalation
HUMAN_AGENT_PHONE=+91XXXXXXXXXX
ESCALATION_THRESHOLD=3
MAX_RETRIES=3

# Notifications
SMS_API_KEY=your_sms_api_key
EMAIL_API_KEY=your_email_api_key
WHATSAPP_API_KEY=your_whatsapp_api_key

# Cost Tracking
VAPI_COST_PER_MINUTE=0.05
YELLOW_COST_PER_CONVERSATION=0.10
